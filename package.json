{
    "name": "bolt",
    "description": "Opinionated react web app template.",
    "version": "1.0.0",
    "browserslist": "> 0.5%, last 2 versions, not dead",
    "source": "src/index.html",
    "scripts": {
        "dev": "parcel src/index.html --port 3000",
        "build": "relay-compiler && parcel build src/index.html",
        "relay": "relay-compiler",
        "schema": "get-graphql-schema https://countries.trevorblades.com/ > ./src/schema.graphql"
    },
    "devDependencies": {
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "babel-plugin-relay": "^13.0.1",
        "graphql": "^16.2.0",
        "parcel": "^2.1.1",
        "postcss-preset-env": "^7.2.0",
        "relay-compiler": "^13.0.1"
    },
    "dependencies": {
        "hoofd": "^1.4.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-final-form": "^6.5.7",
        "react-relay": "^13.0.1",
        "react-router-dom": "^6.2.1",
        "recoil": "^0.5.2",
        "relay-runtime": "^13.0.1"
    },
    "relay": {
        "src": "./src/",
        "schema": "./schema.graphql",
        "language": "typescript"
    }
}
